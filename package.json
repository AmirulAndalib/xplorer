{
  "name": "xplorer",
  "description": "Xplorer, a customizable, modern file manager",
  "version": "0.1.0",
  "author": "Justin Maximillian Kimlim <kimlimjustin@gmail.com>",
  "main": "src/main.js",
  "icon": "build/icon.icns",
  "homepage": "https://github.com/kimlimjustin/xplorer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimlimjustin/xplorer.git"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "scripts": {
    "start": "electron .",
    "docs": "yarn --cwd ./docs start",
    "test": "jest",
    "build": "electron-builder",
    "build:docs": "yarn --cwd ./docs build",
    "deploy": "yarn --cwd ./docs deploy",
    "build-wml": "electron-builder -wml",
    "native_build": "node-gyp rebuild",
    "install": "node install.js",
    "postinstall": "patch-package"
  },
  "build": {
    "directories": {
      "buildResources": "icons"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "license": "LICENSE",
      "runAfterFinish": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "keywords": [
    "Xplorer",
    "File explorer",
    "File",
    "File manager",
    "Folders",
    "Directory"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^13.1.3",
    "electron-builder": "^22.10.5",
    "electron-reloader": "^1.2.1"
  },
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "clipboardy": "^2.3.0",
    "cpy": "^8.1.2",
    "electron-json-storage-sync": "^1.2.0",
    "electron-log": "^4.3.5",
    "electron-prompt": "^1.6.2",
    "fswin": "^3.21.107",
    "is-hidden-file": "1.1.2",
    "jest": "^27.0.4",
    "mv": "^2.1.1",
    "patch-package": "^6.4.7",
    "platform-folders": "^0.5.4",
    "postinstall-postinstall": "^2.1.0",
    "trash": "^7.2.0",
    "uuid": "^8.3.2"
  }
}
