{
  "name": "xplorer",
  "description": "Xplorer, a customizable, modern file manager",
  "version": "0.1.0",
  "author": "Justin Maximillian Kimlim <kimlimjustin@gmail.com>",
  "main": "src/main.js",
  "icon": "build/icon.icns",
  "homepage": "https://github.com/kimlimjustin/xplorer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/kimlimjustin/xplorer.git"
  },
  "os": [
    "darwin",
    "win32",
    "linux"
  ],
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "build": "electron-builder",
    "build-wml": "electron-builder -wml",
    "install": "node-gyp rebuild"
  },
  "build": {
    "directories": {
      "buildResources": "icons"
    },
    "extraResources": [
      "lib/fs/fs.exe"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "license": "LICENSE",
      "runAfterFinish": true
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "keywords": [
    "Xplorer",
    "File explorer",
    "File",
    "File manager",
    "Folders",
    "Directory"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "electron": "^12.0.5",
    "electron-builder": "20.31.2",
    "electron-reloader": "^1.2.1"
  },
  "dependencies": {
    "@electron/remote": "^1.1.0",
    "electron-json-storage-sync": "^1.2.0",
    "jest": "^27.0.4"
  }
}
